<style lang='scss'>
  ul {
    & li {
      max-width: 37.5rem;
      padding: 0.65rem 0;

      & header {
        & small {
          color: var(--secondary-accent);

          font-weight: 400;

          text-transform: uppercase;
        }
      }

      &:hover {
        background-color: hsla(0, 60%, 99%, 0.01);
        backdrop-filter: blur(1px);

        cursor: pointer;
      }
    }
    @media (min-width: 31.25rem) {
      & li {
        padding: 0.65rem 0.5rem;
      }
    }
  }
</style>
