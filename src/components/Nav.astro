---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<section>
  <nav>
    <a class='secondary-link' href='/' contact-link>
      <img src='home.svg' alt='Home icon' contact-image />
    </a>
    <button class='secondary-link' contact-link>
      <img src='message.svg' alt='Message bubble' contact-image />
    </button>
    <!-- TODO: Create a tooltip component -->
    <a class='primary-link' href='/allWriting'>writing</a>
    <a class='primary-link' href='/allWork'>work</a>
  </nav>
</section>

<script>
  const contactButtons = document.querySelectorAll('[contact-link]');
  const contactImages = document.querySelectorAll('[contact-image]');
  contactButtons.forEach((contactButton) => {
    contactButton.addEventListener('mouseover', () => {
      contactImages.forEach((contactImage) => {
        if (contactButton.children[0] == contactImage) {
          contactImage.classList.add('contact-image');
        }
      });
    });
  });
  contactButtons.forEach((contactButton) => {
    contactButton.addEventListener('mouseout', () => {
      contactImages.forEach((contactImage) => {
        if (contactButton.children[0] == contactImage) {
          contactImage.classList.remove('contact-image');
        }
      });
    });
  });
</script>

<style lang='scss'>
  section {
    position: fixed;
    bottom: 0;

    display: flex;
    align-items: center;
    justify-content: center;

    width: 100%;

    padding: 1rem;

    z-index: 1000;
  }
  nav {
    width: 30rem;
    padding: 0.5rem clamp(0.5rem, 5vw, 2rem);
    border-radius: 0.5rem;

    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;

    background-color: rgba(255, 255, 255, 0.015);

    backdrop-filter: blur(15px);
    box-shadow: 0px 3px 5px 2px rgba(0, 0, 0, 0.25);

    & a {
      font-family: var(--sans-font);
      font-size: 0.9rem;
      font-weight: 500;
      text-transform: uppercase;
    }

    & a:hover {
      text-decoration: underline;
    }
  }
  .secondary-link > img {
    height: 1.5rem;
    width: 1.5rem;
    min-height: 1.5rem;
    min-width: 1.5rem;
  }
  .contact-image {
    filter: invert(46%) sepia(37%) saturate(4698%) hue-rotate(337deg)
      brightness(102%) contrast(97%);
  }
  .secondary-link {
    padding: 0.25rem;
    margin: 0;
    border: none;
    border-radius: 0.5rem;

    display: inline-block;

    background-color: transparent;
    color: #ffffff;

    font-family: sans-serif;
    font-size: 1rem;
    text-decoration: none;
    text-align: center;

    transition: background-color 250ms ease-in-out, transform 150ms ease;

    cursor: pointer;

    -webkit-appearance: none;
    -moz-appearance: none;

    & img {
      height: 1.5rem;
      width: 1.5rem;
      min-height: 1.5rem;
      min-width: 1.5rem;
    }
  }
  .secondary-link:hover,
  .secondary-link:focus {
    background-color: rgba(255, 255, 255, 0.1);
    box-shadow: 0px 3px 5px 2px rgba(0, 0, 0, 0.25);
  }
  .secondary-link:focus {
    background: rgba(255, 255, 255, 0.1);
    box-shadow: 0px 3px 5px 2px rgba(0, 0, 0, 0.25);
  }
  .secondary-link:active {
    background: rgba(255, 255, 255, 0.1);

    transform: scale(1.2);
  }
  .primary-link {
    font-weight: 600;
    letter-spacing: 0.0125rem;
  }
</style>

