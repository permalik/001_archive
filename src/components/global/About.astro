<style lang='scss'>
  div {
    padding-top: 1.5rem;
  }
  h1,
  h2 {
    font-family: var(--sans-font);
  }
  h1 {
    padding: 0 0 10rem;

    color: var(--base-light);

    font-weight: 600;
  }
  img {
    border-radius: 0.25rem;
  }
  nav {
    padding: 10rem 0 0;
    border: none;
    border-radius: 0.5rem;

    display: flex;
    flex-flow: row nowrap;

