---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<header>
  <div>
    <a href='/'>
      <p id='logo'>Ty Malik</p>
    </a>
    <p>developer</p>
  </div>
  <nav>
    <a href='/'>about</a>
    <a href='/allWriting'>writing</a>
    <a href='/allWork'>work</a>
    <a href='/resume'>resume</a>
  </nav>
</header>

<style lang='scss'>
  header {
    color: var(--primary);
    font-family: var(--sans-font);

    & a > p {
      font-size: clamp(2rem, 5vw, 2.75rem);
      font-weight: 600;
      letter-spacing: 0.01rem;
    }

    & p {
      font-size: clamp(1.125rem, 5vw, 1.3rem);
      letter-spacing: 0.025rem;
      text-transform: capitalize;
    }
  }
  nav {
    display: flex;
    flex-flow: row nowrap;
    padding-top: 1rem;

    & a {
      font-size: clamp(1.125rem, 5vw, 1.3rem);
      font-weight: 300;
    }

    & a:not(:first-child) {
      padding: 0 0 0 1rem;
    }
  }
  @media (min-width: 25rem) {
    nav {
      flex-flow: column nowrap;
      padding-top: 5rem;

      & a {
        font-size: clamp(1.125rem, 5vw, 1.3rem);
        font-weight: 300;
      }

      & a:not(:first-child) {
        padding: 3rem 0 0 0;
      }
    }
  }
</style>
