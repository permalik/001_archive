---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<header>
  <a href='/'>
    <p>Ty Malik</p>
  </a>
  <p>developer</p>
  <nav>
    <a href='/'>about</a>
    <a href='/allWriting'>writing</a>
