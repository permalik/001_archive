<style lang='scss'>
  header {
    font-family: var(--sans-font);
    color: var(--primary);

    & a > p {
      font-size: clamp(2rem, 5vw, 2.75rem);
      font-weight: 600;
      letter-spacing: 0.01rem;
    }

    & p {
      font-size: clamp(1.125rem, 5vw, 1.3rem);
      letter-spacing: 0.025rem;
      text-transform: capitalize;
    }
  }

  nav {
    display: flex;
    flex-flow: column nowrap;
  }
</style>
