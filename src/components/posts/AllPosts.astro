---
import FullPostList from './FullList.astro';
const allPosts = await Astro.glob('../../pages/writing/*.md');
---

<section>
  <header>
    <h2>all writing</h2>
  </header>
  <FullPostList posts={allPosts} />
</section>

<style>
  section {
    margin: 0 0 5rem;

    & header {
      margin: 0 0 1rem;

      & h2 {
        margin: 0 0.25rem 0 0;

        text-transform: capitalize;
      }
    }
  }
</style>
