---
export function getStaticPaths() {
  return [{ params: { work: 'typescript' } }];
}

const { work } = Astro.params;

const taggedWork = [];

data.forEach((repo) => {
  repo.topics.map((topic) => {
    if (topic === work) {
      taggedWork.push(repo);
    }
  });
});
---

<ul>
  {taggedWork.map((project) => <li>{project.name}</li>)}
</ul>
