---
import BaseLayout from '../layouts/BaseLayout.astro';
const allPosts = await Astro.glob('./writing/*.md');
---

<BaseLayout>
  <section>
    <ul>
      {
        allPosts.map((post) => (
          <li>
            <a href={post.url}>
              {post.frontmatter.edition}. {post.frontmatter.title}
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>
