---
import BaseLayout from '../layouts/BaseLayout.astro';
const allPosts = await Astro.glob('./writing/*.md');
---

<BaseLayout>
  <h1>Writing</h1>
  <ul>
    {
      allPosts.map((post) => (
        <li>
          <a href={post.url}>
            <h2>{post.frontmatter.title}</h2>
          </a>
          <p>{post.frontmatter.description}</p>
        </li>
      ))
    }
  </ul>
</BaseLayout>

<style>
  h1 {
    font-family: var(--sans-font);
    font-size: clamp(2rem, 5vw, 2.5rem);
  }
  ul {
    padding-top: 2.5rem;
  }
  li:not(:first-child) {
    padding: 1.5rem 0 0;
  }
  h2 {
    display: inline;

    font-family: var(--sans-font);
    font-weight: 400;
  }
  h2 {
    position: relative;
  }

  h2::after {
    content: '';
    position: absolute;
    bottom: -0.125rem;
    left: 0;
    height: 0.125rem;
    width: 100%;
    background-color: var(--base-light);
    transform: scaleX(0); /* Initially hidden, set scale to 0 */
    transform-origin: left; /* Set the transform origin to left to expand to the right */
    transition: transform 0.3s ease; /* Add a transition for the transform property */
  }

  h2:hover::after {
    transform: scaleX(
      1
    ); /* On hover, expand the underline to its original width */
  }
</style>
