---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
const allPosts = await Astro.glob('./writing/*.md');
---

<BaseLayout>
  <main>
    <Section>
      <ul>
        {
          allPosts.map((post) => (
            <li>
              <a href={post.url}>
                00{post.frontmatter.edition}. {post.frontmatter.title}
              </a>
            </li>
          ))
        }
      </ul>
    </Section>
  </main>
</BaseLayout>
