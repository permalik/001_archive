const taggedProjects = [];

data.forEach((repo) => {
  repo.topics.map((topic) => {
    if (topic === projects) {
      taggedProjects.push(repo);
    }
  });
});
---

<ul>
  {taggedProjects.map((project) => <li>{project.name}</li>)}
</ul>
