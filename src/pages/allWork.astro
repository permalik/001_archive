    <style>
      section {
        padding: 2.5rem 0 0;
      }

      .github-list {
        & > li {
          display: flex;
          flex-flow: column nowrap;

          & > h2 {
            padding: 0.25rem 0 0;

            & > span {
              padding-right: 0.5rem;
              margin-right: 0.5rem;
              border-right: 1px solid;

              color: #fb5640;
            }

            font-family: var(--sans-font);
            font-weight: 400;
            text-transform: uppercase;

            word-wrap: normal;
          }

          & > p:first-of-type {
            color: hsla(0, 60%, 99%, 0.75);

            font-family: var(--sans-font);
            font-size: clamp(0.75rem, 5vw, 0.9rem);
            font-weight: 400;
          }

          & > nav {
            padding-top: 0.5rem;

            display: flex;
            flex-flow: row nowrap;
            align-items: center;

            & > a {
              padding: 0.25rem;
              border: none;
              border-radius: 0.5rem;

              background-color: transparent;
              opacity: 0.5;

              transition: background-color 250ms ease-in-out,
                transform 150ms ease;

              & > img {
                width: 1.5rem;
                height: 1.5rem;
              }
            }

            & > a:not(:last-child) {
              margin-right: 1rem;
            }

            & > a:hover {
              background-color: rgba(255, 255, 255, 0.1);
              opacity: 1;
              box-shadow: 0px 3px 5px 2px rgba(0, 0, 0, 0.25);
            }
          }

