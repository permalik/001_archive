---
import '../styles/global.scss';
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
}

const { frontmatter } = Astro.props;

const edition = () => {
  if (frontmatter.edition < 10) {
    return `00${frontmatter.edition}`;
  } else if (frontmatter.edition < 100) {
    return `0${frontmatter.edition}`;
  } else {
    return frontmatter.edition;
  }
};
---

<BaseLayout>
  <div class='writing-layout'>
    <header>
      <h1>{frontmatter.title}</h1>
      <p class='description'>{frontmatter.description}</p>
    </header>
    <img src={frontmatter.imageUrl} alt='' />
    <div class='metrics'>
      <p>
        {edition}
      </p>
      <span>•</span>
      <time datetime={frontmatter.createdAt.slice(0, 10)}>
        {frontmatter.createdAt.slice(0, 10).split('-').join('.')}
      </time>
      <span>•</span>
      <p>
        {frontmatter.author}
      </p>
    </div>
    <ul class='tags'>
      {
        frontmatter.tags.map((tag) => (
          <li>
            <a href='/'>{tag}</a>
          </li>
        ))
      }
    </ul>
    <div class='content'>
      <slot />
    </div>
  </div>
</BaseLayout>

<style>
  .writing-layout {
    & header {
      & h1 {
        font-family: var(--sans-font);
      }
      & .description {
        color: hsla(0, 60%, 99%, 0.75);

        font-family: var(--sans-font);
        font-size: clamp(0.75rem, 5vw, 0.9rem);
        font-weight: 600;
      }
    }
    & img {
      padding: 4rem 0;
    }
    & .metrics {
      display: flex;
      align-items: baseline;

      & > * {
        background: -webkit-linear-gradient(
          180deg,
          hsla(0, 60%, 99%, 0.75),
          hsla(0, 60%, 99%, 0.45)
        );

        font-family: Monaco, 'Courier New', Courier;
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 0.045rem;

        white-space: nowrap;

        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }
      & > span {
        padding: 0 0.5rem;
      }
      & > p:last-of-type {
        letter-spacing: normal;
      }
    }
    & .tags {
      padding-top: 0.75rem;

      display: flex;
      flex-flow: row wrap;

      & li {
        display: flex;
        justify-content: center;

        line-height: 2.5;
      }

      & li:not(:last-child) {
        margin-right: 0.85rem;
      }

      & li > a {
        display: inline;

        font-family: var(--sans-font);
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;

        color: #40fbb4;
        opacity: 0.75;

        white-space: nowrap;
      }

      & li > a:hover {
        opacity: 1;
      }
    }
  }
</style>
